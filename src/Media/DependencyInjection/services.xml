<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- ProductMedia Extension -->
        <service id="shopware.media.extension.url" class="Shopware\Media\Extension\UrlExtension">
            <tag name="shopware.extension" bundle="media" />
            <argument type="service" id="shopware.media.url_generator" />
        </service>

        <service id="shopware.media.extension.thumbnail" class="Shopware\Media\Extension\ThumbnailExtension">
            <tag name="shopware.extension" bundle="media" />
            <argument type="service" id="shopware.media.url_generator" />
        </service>

        <service id="shopware.media.garbage_collector_factory" class="Shopware\Media\GarbageCollectorFactory">
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="shopware.media.strategy" />
        </service>

        <service id="shopware.media.garbage_collector" class="Shopware\Media\GarbageCollector">
            <factory service="shopware.media.garbage_collector_factory" method="factory" />
        </service>

        <service id="shopware.media.direct_filesystem" class="Shopware\Filesystem\PrefixFilesystem">
            <argument type="service" id="shopware.filesystem.public" />
            <argument>media</argument>
        </service>

        <service id="shopware.media.filesystem" class="Shopware\Media\StrategyFilesystem">
            <argument type="service" id="shopware.media.direct_filesystem" />
            <argument type="service" id="shopware.media.strategy" />
        </service>

        <service id="shopware.media.url_generator" class="Shopware\Media\UrlGenerator">
            <argument type="service" id="shopware.media.strategy" />
            <argument type="service" id="request_stack" />
            <argument>%shopware.cdn.url%</argument>
        </service>

        <service id="shopware.media.replace_service" class="Shopware\Media\MediaReplaceService">
            <argument type="service" id="shopware.media.filesystem" />
            <!--<argument type="service" id="thumbnail_manager"/>-->
            <!--<argument type="service" id="models" />-->
        </service>

        <service id="shopware.media.strategy_factory" class="Shopware\Media\StrategyFactory">
            <argument type="tagged" tag="shopware.media.strategy" />
        </service>

        <service id="shopware.media.strategy" class="Shopware\Media\Strategy\StrategyInterface">
            <factory service="shopware.media.strategy_factory" method="factory" />
            <argument>%shopware.cdn.strategy%</argument>
        </service>

        <!-- Commands -->
        <service id="shopware.media.command.media_migrate" class="Shopware\Media\Commands\MediaMigrateCommand">
            <argument type="service" id="shopware.media.filesystem" />
            <argument type="service" id="shopware.media.strategy_factory" />
            <argument type="service" id="event_dispatcher" />
            <tag name="console.command" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="shopware.media.command.media_cleanup" class="Shopware\Media\Commands\MediaCleanupCommand">
            <argument type="service" id="shopware.media.garbage_collector" />
            <tag name="console.command" />
        </service>

        <service id="shopware.media.command.media_optimize" class="Shopware\Media\Commands\MediaOptimizeCommand">
            <argument type="service" id="shopware.media.cache_optimizer_service" />
            <argument>%kernel.project_dir%/web/media</argument>
            <tag name="console.command" />
        </service>

        <!-- Strategies -->
        <service id="shopware.media.strategy.md5" class="Shopware\Media\Strategy\Md5Strategy">
            <tag name="shopware.media.strategy" />
        </service>

        <service id="shopware.media.strategy.plain" class="Shopware\Media\Strategy\PlainStrategy">
            <tag name="shopware.media.strategy" />
        </service>

        <!-- Optimizer -->
        <service id="shopware.media.optimizer_service" class="Shopware\Media\OptimizerService">
            <argument type="tagged" tag="shopware.media.optimizer" />
            <argument type="service" id="shopware.media.filesystem" />
        </service>

        <service id="shopware.media.cache_optimizer_service" class="Shopware\Media\CacheOptimizerService"
                 decorates="shopware.media.optimizer_service" public="false">
            <argument type="service" id="shopware.media.cache_optimizer_service.inner" />
        </service>

        <service id="shopware.media.optimizer.jpegoptim" class="Shopware\Media\Optimizer\JpegoptimOptimizer">
            <tag name="shopware.media.optimizer" priority="100" />
        </service>

        <service id="shopware.media.optimizer.jpegtran" class="Shopware\Media\Optimizer\JpegtranOptimizer">
            <tag name="shopware.media.optimizer" priority="90" />
        </service>

        <service id="shopware.media.optimizer.pngout" class="Shopware\Media\Optimizer\PngoutOptimizer">
            <tag name="shopware.media.optimizer" priority="100" />
        </service>

        <service id="shopware.media.optimizer.optipng" class="Shopware\Media\Optimizer\OptipngOptimizer">
            <tag name="shopware.media.optimizer" priority="90" />
        </service>

        <service id="shopware.media.optimizer.pngcrush" class="Shopware\Media\Optimizer\PngcrushOptimizer">
            <tag name="shopware.media.optimizer" priority="80" />
        </service>
    </services>
</container>
