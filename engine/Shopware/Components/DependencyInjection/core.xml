<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Shopware service definitions -->

        <service id="product_service" class="Shopware\Service\Product">
            <argument type="service" id="product_gateway" />
            <argument type="service" id="price_service" />
            <argument type="service" id="media_service" />
            <argument type="service" id="translation_service" />
            <argument type="service" id="global_state_service" />
            <argument type="service" id="events" />
        </service>

        <service id="price_service" class="Shopware\Service\Price" >
            <argument type="service" id="price_gateway" />
        </service>

        <service id="media_service" class="Shopware\Service\Media" >
            <argument type="service" id="media_gateway" />
            <argument type="service" id="config" />
        </service>

        <service id="global_state_service" class="Shopware\Service\GlobalState" />

        <service id="translation_service" class="Shopware\Service\Translation" >
            <argument type="service" id="translation_gateway" />
        </service>


        <service id="property_service" class="Shopware\Service\Property" >
            <argument type="service" id="property_gateway" />
            <argument type="service" id="translation_service" />
        </service>




        <!-- Global shopware gateway definitions -->
        <!-- This gateways are used in the shopware core. Shopware uses as default the *_orm gateways to select data -->

        <service id="product_gateway" alias="product_gateway_dbal" />
        <service id="price_gateway" alias="price_gateway_dbal" />
        <service id="media_gateway" alias="media_gateway_dbal" />
        <service id="translation_gateway" alias="translation_gateway_dbal" />
        <service id="property_gateway" alias="property_gateway_dbal" />
        <service id="search_gateway" alias="search_gateway_dbal" />



        <service id="search_gateway_dbal" class="Shopware\Gateway\DBAL\Search">
            <argument type="service" id="models" />
        </service>


        <!--used for product selection, like listings, minified products or detailed products-->
        <service id="product_gateway_dbal" class="Shopware\Gateway\DBAL\Product">
            <argument type="service" id="models" />
            <argument type="service" id="product_hydrator_dbal" />
        </service>

        <!--used for media selection, like product media or the product cover-->
        <service id="media_gateway_dbal" class="Shopware\Gateway\DBAL\Media">
            <argument type="service" id="models" />
            <argument type="service" id="media_hydrator_dbal" />
            <argument type="service" id="thumbnail_manager" />
        </service>

        <!--used for price selections, like product prices and cheapest price-->
        <service id="price_gateway_dbal" class="Shopware\Gateway\DBAL\Price">
            <argument type="service" id="models" />
            <argument type="service" id="price_hydrator_dbal" />
            <argument type="service" id="customer_group_gateway_dbal" />
        </service>

        <!--used to get the customer group data over the DBAL connection-->
        <service id="customer_group_gateway_dbal" class="Shopware\Gateway\DBAL\CustomerGroup">
            <argument type="service" id="models" />
            <argument type="service" id="customer_group_hydrator_dbal" />
        </service>

        <service id="translation_gateway_dbal" class="Shopware\Gateway\DBAL\Translation">
            <argument type="service" id="models" />
            <argument type="service" id="translation_hydrator_dbal" />
        </service>


        <service id="property_gateway_dbal" class="Shopware\Gateway\DBAL\Property">
            <argument type="service" id="models" />
            <argument type="service" id="property_hydrator_dbal" />
        </service>




        <!-- Shopware hydrator definitions -->



        <service id="product_hydrator_dbal" class="Shopware\Hydrator\DBAL\Product" >
            <argument type="service" id="attribute_hydrator_dbal" />
            <argument type="service" id="manufacturer_hydrator_dbal" />
            <argument type="service" id="tax_hydrator_dbal" />
            <argument type="service" id="unit_hydrator_dbal" />
        </service>

        <service id="price_hydrator_dbal" class="Shopware\Hydrator\DBAL\Price" >
            <argument type="service" id="customer_group_hydrator_dbal" />
            <argument type="service" id="unit_hydrator_dbal" />
            <argument type="service" id="attribute_hydrator_dbal" />
        </service>

        <service id="manufacturer_hydrator_dbal" class="Shopware\Hydrator\DBAL\Manufacturer">
            <argument type="service" id="attribute_hydrator_dbal" />
        </service>

        <service id="media_hydrator_dbal" class="Shopware\Hydrator\DBAL\Media">
            <argument type="service" id="attribute_hydrator_dbal" />
        </service>

        <service id="customer_group_hydrator_dbal" class="Shopware\Hydrator\DBAL\CustomerGroup">
            <argument type="service" id="attribute_hydrator_dbal" />
        </service>

        <service id="translation_hydrator_dbal" class="Shopware\Hydrator\DBAL\Translation" >
            <argument type="service" id="product_hydrator_dbal" />
            <argument type="service" id="unit_hydrator_dbal" />
            <argument type="service" id="manufacturer_hydrator_dbal" />
            <argument type="service" id="property_hydrator_dbal" />
        </service>


        <service id="attribute_hydrator_dbal" class="Shopware\Hydrator\DBAL\Attribute" />
        <service id="tax_hydrator_dbal" class="Shopware\Hydrator\DBAL\Tax" />
        <service id="unit_hydrator_dbal" class="Shopware\Hydrator\DBAL\Unit" />

        <service id="property_hydrator_dbal" class="Shopware\Hydrator\DBAL\Property" >
            <argument type="service" id="attribute_hydrator_dbal" />
        </service>
    </services>
</container>
