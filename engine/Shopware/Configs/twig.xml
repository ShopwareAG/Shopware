<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twig.class">Twig_Environment</parameter>
        <parameter key="twig.extension.debug.class">Twig_Extension_Debug</parameter>

        <parameter key="twig.loader.filesystem.class">Twig_Loader_Filesystem</parameter>
        <parameter key="twig.templates.path">%kernel.root_dir%/templates/_twig</parameter>
        <parameter key="twig.options" type="collection">
            <parameter key="debug">%kernel.debug%</parameter>
            <parameter key="charset">%kernel.charset%</parameter>
            <parameter key="charset">%kernel.charset%</parameter>
            <parameter key="autoescape">true</parameter>
            <!-- ... -->
        </parameter>
    </parameters>

    <services>
        <service id="twig.extension.debug" class="%twig.extension.debug.class%" public="false"/>

        <service id="twig.loader.filesystem" class="%twig.loader.filesystem.class%" public="false">
            <argument>%twig.templates.path%</argument>
        </service>

        <service id="twig.loader" alias="twig.loader.filesystem"/>

        <service id="twig" class="%twig.class%">
            <argument type="service" id="twig.loader"/>
            <argument>%twig.options%</argument>
            <!--
            <call method="addGlobal">
                <argument>app</argument>
                <argument type="service" id="templating.globals"/>
            </call>
            -->
            <call method="addExtension">
                <argument type="service" id="twig.extension.debug" />
            </call>
        </service>

    </services>
</container>
