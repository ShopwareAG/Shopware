<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="shopware.snippet_manager.class">Shopware_Components_Snippet_Manager</parameter>
        <parameter key="shopware.subscriber.class">Shopware_Components_Subscriber</parameter>
        <parameter key="shopware.cache_factory.class">Shopware\DependencyInjection\Bridge\Cache</parameter>
        <parameter key="shopware.config_factory.class">Shopware\DependencyInjection\Bridge\Config</parameter>
        <parameter key="shopware.model_factory.class">Shopware\DependencyInjection\Bridge\Models</parameter>
    </parameters>

    <services>
        <service id="application" synthetic="true" />
        <service id="loader" class="Enlight_Loader" />
        <service id="resource_loader" synthetic="true" />

        <service id="snippets" class="%shopware.snippet_manager.class%"/>
        <service id="subscriber" class="%shopware.subscriber.class%"/>

        <service id="monoglog.handler.streamhandler" class="Monolog\Handler\StreamHandler" public="false">
            <argument>%kernel.root_dir%/logs/default.log</argument>
        </service>

        <service id="log" alias="monolog"/>
        <service id="monolog" class="Monolog\Logger">
            <argument>default</argument>
            <call method="pushHandler">
                <argument type="service" id="monoglog.handler.streamhandler" />
            </call>
        </service>


        <service id="db"
                 class="Enlight_Components_Db_Adapter_Pdo_Mysql"
                 factory-class="Enlight_Components_Db"
                 factory-method="factory">

            <argument>%shopware.db.adapter%</argument>
            <argument>%shopware.db%</argument>
            <call method="getConnection"/>
        </service>

        <!-- start cache services -->
        <!-- this is the main cache service, however we need to execute
        some additional code during cache initialisation which is done in the
        cache factory -->
        <service id="cache_zend"
                 class="Zend_Cache_Core"
                 factory-class="Zend_Cache"
                 factory-method="factory"
                 public="false">

            <argument>Core</argument>
            <argument>%shopware.cache.backend%</argument>
            <argument>%shopware.cache.frontendOptions%</argument>
            <argument>%shopware.cache.backendOptions%</argument>
        </service>

        <service id="cache_factory" class="%shopware.cache_factory.class%">
            <argument type="service" id="cache_zend"/>
        </service>

        <service id="cache"
                 class="Zend_Cache_Core"
                 factory-service="cache_factory"
                 factory-method="factory">
        </service>
        <!-- end cache services-->

        <service id="config_factory" class="%shopware.config_factory.class%">
            <argument type="service" id="cache" />
            <argument>%shopware.config%</argument>
            <argument type="service" id="db" on-invalid="ignore"/>
        </service>

        <service id="config"
                 class="Shopware_Components_Config"
                 factory-service="config_factory"
                 factory-method="factory" />

        <service id="plugins"
                 class="Enlight_Plugin_PluginManager">

            <argument type="service" id="application" />
        </service>

        <service id="events"
                 class="Enlight_Event_EventManager">

            <argument type="service" id="application" />
        </service>

        <service id="hooks"
                 class="Enlight_Hook_HookManager">

            <argument type="service" id="application" />
            <argument>%shopware.hook%</argument>
        </service>

        <service id="model_config_factory"
                 class="Shopware\DependencyInjection\Bridge\ModelConfig">

            <argument>%shopware.Model%</argument>
            <argument type="service" id="cache" />
            <argument type="service" id="hooks" />
        </service>

        <service id="model_config"
                 class="Shopware\Components\Model\Configuration"
                 factory-service="modelConfig_factory"
                 factory-method="factory" />

        <service id="model_factory"
                 class="Shopware\DependencyInjection\Bridge\Models">

            <argument type="service" id="model_config" />
            <argument type="service" id="loader" />
            <argument type="service" id="events" />
            <argument type="service" id="db" />
            <argument type="service" id="resource_loader" />
            <argument>%kernel.root_dir%/engine/Shopware/Models</argument>
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="models"
                 class="Shopware\Components\Model\ModelManager"
                 factory-service="model_factory"
                 factory-method="factory" />

    </services>
</container>
